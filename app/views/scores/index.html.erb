<!DOCTYPE html>
<html lang="jp">
<head>
  <meta charset="UTF-8">
  <title>Tab Sample</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <div class="area">
    <input type="radio" name="tab_name" id="tab1" checked>
    <label class="tab_class" for="tab1">EASY</label>
    <div class="content_class">
      <div class="index_scroll_box">
      <table>
        <tr>
          <th>順位</th><th>名前</th> <th>点数</th>
        </tr>
        <% @score1.each do |score| %>
          <tr>
            <td><%= @number %></td> <td><%= score.name %></td> <td><%= score.score %></td>
          </tr>
          <% @number += 1 %>
        <% end %>
        </table>
      </div>
    </div>
    <input type="radio" name="tab_name" id="tab2" >
    <label class="tab_class" for="tab2">NOMAL</label>
    <div class="content_class">
      <div class="index_scroll_box">
      <% @number = 1 %>
      <table>
        <tr>
          <th>順位</th><th>名前</th> <th>点数</th>
        </tr>
        <% @score2.each do |score| %>
          <tr>
            <td><%= @number %></td> <td><%= score.name %></td> <td><%= score.score %></td>
          </tr>
          <% @number += 1 %>
        <% end %>
        </table>
      </div>
    </div>
    <input type="radio" name="tab_name" id="tab3" >
    <label class="tab_class" for="tab3">HARD</label>
    <div class="content_class">
      <div class="index_scroll_box">
      <% @number = 1 %>
      <table>
        <tr>
          <th>順位</th><th>名前</th> <th>点数</th>
        </tr>
        <% @score3.each do |score| %>
          <tr>
            <td><%= @number %></td> <td><%= score.name %></td> <td><%= score.score %></td>
          </tr>
          <% @number += 1 %>
        <% end %>
        </table>
      </div>
    </div>
  </div>
</body>
</html>
