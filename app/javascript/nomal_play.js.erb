//配列を合体して全通りの組み合わせを作る
function romeArray2combinationQArray(rome_array){
  var new_rome_array = [];
  for (var i = 0; i < rome_array.length; i++){
    if (typeof rome_array[i][0] === "string"){
      for (var n = 0; n < rome_array[i].length; n++){
        new_rome_array.push(rome_array[i][n]);
      }
    }else if (Array.isArray(rome_array[i][0])){
      new_rome_array.push(rome_array[i]);
    }
  }
  rome_array = new_rome_array;
  var q_c_array = [];
  for (var i = 0; i < rome_array.length; i++) {
    if (Array.isArray(rome_array[i])){
      if(q_c_array.length === 0){
        q_c_array = ["", ""];
      }else{
        q_c_array = q_c_array.concat(q_c_array);
      }
      for (var n = 0; n < q_c_array.length; n++) {
        if (n < q_c_array.length/2){
          q_c_array[n] = q_c_array[n] + rome_array[i][0];
        }else{
          q_c_array[n] = q_c_array[n] + rome_array[i][1];
        }
      }
    }else if(i == 0){
      q_c_array.push(rome_array[i]);
    }else{
      for (var n = 0; n < q_c_array.length; n++) {
        q_c_array[n] = q_c_array[n] + rome_array[i];
      }
    }
  }
  return q_c_array
}

